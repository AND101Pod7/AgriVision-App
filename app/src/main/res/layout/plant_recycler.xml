<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/plant_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:contentDescription="Image of plant"
        android:background="@color/dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/image_label"
        android:text=""
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/plant_image"
        app:layout_constraintStart_toStartOf="@id/plant_image" />
    <!--water
    <TextView
        android:id="@+id/plant_water_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Water Requirement:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/plant_image"
        app:layout_constraintTop_toBottomOf="@id/plant_image" />
    <TextView
        android:id="@+id/plant_water_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Weekly, Frequent"
        style="@style/plant_list_data_style"
        app:layout_constraintStart_toEndOf="@id/plant_water_label"
        app:layout_constraintTop_toBottomOf="@id/plant_image" />
    <TextView
        android:id = "@+id/plant_light_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Reuirement:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/plant_water_label"
        app:layout_constraintStart_toStartOf="@id/plant_image"/>
    <TextView
        android:id="@+id/plant_light_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direct Sunlight"
        android:maxLength="15"
        style="@style/plant_list_data_style"
        app:layout_constraintStart_toEndOf="@id/plant_light_label"
        app:layout_constraintTop_toTopOf="@id/plant_light_label" />

    <TextView
        android:id = "@+id/plant_soil_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soil Type"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/plant_light_label"
        app:layout_constraintStart_toStartOf="@id/plant_image"/>
    <TextView
        android:id="@+id/plant_soil_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dry"
        style="@style/plant_list_data_style"
        app:layout_constraintStart_toEndOf="@id/plant_soil_label"
        app:layout_constraintTop_toTopOf="@id/plant_soil_label" />
    <TextView
        android:id = "@+id/plant_zone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hardiness Zone:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/plant_soil_label"
        app:layout_constraintStart_toStartOf="@id/plant_image"/>
    <TextView
        android:id="@+id/plant_zone_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        style="@style/plant_list_data_style"
        app:layout_constraintStart_toEndOf="@id/plant_zone_label"
        app:layout_constraintTop_toTopOf="@id/plant_zone_label" />
    <TextView
        android:id = "@+id/plant_life_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Cycle:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/plant_zone_label"
        app:layout_constraintStart_toStartOf="@id/plant_image"/>
    <TextView
        android:id="@+id/plant_life_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long"
        android:maxLength="20"
        style="@style/plant_list_data_style"
        app:layout_constraintStart_toEndOf="@id/plant_life_label"
        app:layout_constraintTop_toTopOf="@id/plant_life_label" />
    -->



</androidx.constraintlayout.widget.ConstraintLayout>